root: true

parserOptions:
  ecmaVersion: 2018
  sourceType: "module"

env:
  es2017: true
  browser: true

extends:
  "htmlacademy/vanilla"

rules:
  array-bracket-spacing: "error"
  comma-dangle:
  - "error"
  - "always-multiline"
  comma-spacing: "error"
  computed-property-spacing: "error"
  keyword-spacing: "error"
  object-curly-spacing: "error"
  semi: "error"
  space-in-parens: "error"
  space-infix-ops: "error"
  space-unary-ops: "error"
